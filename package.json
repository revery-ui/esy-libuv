
{
  "name": "esy-libuv",
  "version": "1.34.2",
  "description": "Esy-enabled libuv build",
  "license": "MIT",
  "esy": {
    "build": [
        ["sh", "autogen.sh"],
        ["./configure #{os=='windows' ? '--host=x86_64-w64-mingw32 CC=x86_64-w64-mingw32-gcc':''} PREFIX=#{self.install}"],
        ["make"],
        ["make check"],
        ["make install"]
    ],
    "buildsInSource":true,
    "exportedEnv": {
        "LIBUV_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "LIBUV_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        }
    }
  },
  "dependencies": {
    "esy-cmake": "^0.3.2",
    "esy-libtools": "github:bryphe/esy-libtools#62766a2"
  }
}
