
{
  "name": "esy-libuv",
  "version": "1.34.2",
  "description": "Esy-enabled libuv build",
  "license": "MIT",
  "esy": {
    "build": [
        ["bash", "-c", "#{os == 'windows' ? './esy/configure-windows.sh' : './esy/configure.sh'}"],
        ["make", "install"]
    ],
    "buildsInSource":true,
    "exportedEnv": {
        "LIBUV_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "LIBUV_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        }
    }
  },
  "dependencies": {
    "esy-cmake": "^0.3.2"
  }
}
